{
    "name": "genaicourse-backend",
    "version": "1.0.0",
    "description": "Backend API for GenAI Course Platform",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint . --ext .js --fix",
        "build": "echo 'Backend build complete'",
        "seed": "node seed.js"
    },
    "keywords": [
        "mern",
        "education",
        "api"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-async-handler": "^1.2.0",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "html-pdf-node": "^1.0.7",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.3",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "pdf-parse": "^2.4.5",
        "puppeteer": "^24.36.0",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "supertest": "^6.3.3"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "**/*.js",
            "!**/node_modules/**",
            "!**/coverage/**",
            "!server.js"
        ],
        "testMatch": [
            "**/__tests__/**/*.test.js",
            "**/?(*.)+(spec|test).js"
        ],
        "watchman": false,
        "testTimeout": 10000
    }
}
